<script>
async function fetchMetales() {
  const response = await fetch('https://metals-api.com/api/latest?access_key=TU_API_KEY&base=USD&symbols=XAU,XAG,CU');
  const data = await response.json();
  document.getElementById('oro').textContent = '$' + data.rates.XAU.toFixed(2);
  document.getElementById('plata').textContent = '$' + data.rates.XAG.toFixed(2);
  document.getElementById('cobre').textContent = '$' + data.rates.CU.toFixed(2);
}
fetchMetales();
</script>



<script>
async function actualizarTicker() {
  const res = await fetch('https://metals-api.com/api/latest?access_key=TU_API_KEY&base=USD&symbols=XAU,XAG,CU');
  const data = await res.json();
  const oro = '$' + data.rates.XAU.toFixed(2);
  const plata = '$' + data.rates.XAG.toFixed(2);
  const cobre = '$' + data.rates.CU.toFixed(2);
  document.getElementById('ticker').textContent = `Oro: ${oro} | Plata: ${plata} | Cobre: ${cobre}`;
}
actualizarTicker();
setInterval(actualizarTicker, 60000); // cada minuto
</script>




